# =============================================================================
# CareCircle - Local Development Profile
# =============================================================================
# Local services: Postgres, Redis, RabbitMQ via docker-compose
# Hosts = localhost, TLS = false
# =============================================================================

# =============================================================================
# Database (PostgreSQL - Local Docker)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=1234
DB_DATABASE=carecircle
DB_SSL=false

# DATABASE_URL is required for Prisma
DATABASE_URL=postgresql://postgres:1234@localhost:5432/carecircle

# =============================================================================
# Redis (Local Docker)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_URL=redis://localhost:6379

# =============================================================================
# Message Queue - RabbitMQ (Local Docker)
# =============================================================================
AMQP_URL=amqp://guest:guest@localhost:5672
AMQP_HOST=localhost
AMQP_USER=guest
AMQP_PASSWORD=guest
AMQP_VHOST=/
AMQP_PORT=5672
AMQP_TLS=false

# =============================================================================
# MQTT (Local Docker via RabbitMQ)
# =============================================================================
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=guest
MQTT_PASSWORD=guest
MQTT_TLS=false

# =============================================================================
# Workers Configuration
# =============================================================================
WORKER_CONCURRENCY=10
JOB_ATTEMPTS=5
JOB_BACKOFF_DELAY=1000
JOB_TIMEOUT=30000
HEALTH_PORT=4001

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=debug
PRISMA_LOG_LEVEL=error,warn
PRISMA_SLOW_QUERY_LOG=true

# =============================================================================
# Web Push (VAPID Keys - for browser push notifications)
# =============================================================================
# Generate keys with: npx web-push generate-vapid-keys
# VAPID_PUBLIC_KEY=
# VAPID_PRIVATE_KEY=
# VAPID_SUBJECT=mailto:admin@carecircle.com

# =============================================================================
# Email (Optional - Notifications)
# =============================================================================
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=noreply@carecircle.com
# EMAIL_FROM_NAME=CareCircle

# =============================================================================
# SMS (Optional - Twilio)
# =============================================================================
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# =============================================================================
# Alerting (Optional - Slack DLQ Webhook)
# =============================================================================
# SLACK_DLQ_WEBHOOK=
